<UserControl x:Class="ytplayer.player.ChapterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ytplayer.player"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="../res/YtpResource.xaml"/>
    </UserControl.Resources>
    <StackPanel Background="DarkBlue">
        <Grid 
            x:Name="TickerView" 
            Background="Transparent" 
            ClipToBounds="True" 
            Height="8">
            <!--<Rectangle Width="1" Fill="White" HorizontalAlignment="Left" Margin="100,0,0,0"/>-->
        </Grid>
        <Grid 
            x:Name ="RangeView" 
            Background="#80FF00" 
            ClipToBounds="True" 
            Height="8"
            Visibility="{Binding HasSkipChapter.Value, Converter={StaticResource BoolVisibilityConverter}}">
            <!--<Rectangle Width="100" Fill="Gray" HorizontalAlignment="Left" Margin="100,0,0,0"/>-->
        </Grid>
    </StackPanel>
</UserControl>
