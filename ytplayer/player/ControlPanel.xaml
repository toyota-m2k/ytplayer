<UserControl x:Class="ytplayer.player.ControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ytplayer.player"
             mc:Ignorable="d"
             Unloaded="OnUnloaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="../res/YtpResource.xaml"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Path x:Key="PathPlay" Data="M8,5.14V19.14L19,12.14L8,5.14Z" Stretch="Fill" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ButtonBase}}"/>
            <Path x:Key="PathPause" Data="M14,19H18V5H14M6,19H10V5H6V19Z" Stretch="Fill" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ButtonBase}}"/>
            <Path x:Key="PathPrev" Data="M6,18V6H8V18H6M9.5,12L18,6V18L9.5,12Z" Stretch="Fill" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ButtonBase}}"/>
            <Path x:Key="PathNext" Data="M16,18H18V6H16M6,18L14.5,12L6,6V18Z" Stretch="Fill" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ButtonBase}}"/>
            <Path x:Key="PathMaximize" Data="M9.5,13.09L10.91,14.5L6.41,19H10V21H3V14H5V17.59L9.5,13.09M10.91,9.5L9.5,10.91L5,6.41V10H3V3H10V5H6.41L10.91,9.5M14.5,13.09L19,17.59V14H21V21H14V19H17.59L13.09,14.5L14.5,13.09M13.09,9.5L17.59,5H14V3H21V10H19V6.41L14.5,10.91L13.09,9.5Z" Stretch="Fill" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ButtonBase}}"/>
            <Path x:Key="PathTrash" Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" Stretch="Uniform" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ButtonBase}}"/>
            <Path x:Key="PathExcellent" Data="M9,9.5C9,10.3 8.3,11 7.5,11C6.7,11 6,10.3 6,9.5C6,8.7 6.7,8 7.5,8C8.3,8 9,8.7 9,9.5M16,9.5C16,10.3 15.3,11 14.5,11C13.7,11 13,10.3 13,9.5C13,8.7 13.7,8 14.5,8C15.3,8 16,8.7 16,9.5M14,14.12L11.88,12L10.82,13.06L11.88,14.12L10.82,15.18L11.88,16.24L10.82,17.3L11.88,18.36L14,16.24L12.94,15.18L14,14.12M16.85,13A2.05,2.05 0 0,0 14.8,15.05C14.8,15.62 15.03,16.12 15.4,16.5L18.9,20L22.4,16.5C22.77,16.13 23,15.61 23,15.05A2.05,2.05 0 0,0 20.95,13C20.4,13 19.87,13.23 19.5,13.6L18.9,14.2L18.3,13.61C17.93,13.23 17.4,13 16.85,13M15,18.92C13.82,19.6 12.46,20 11,20A8,8 0 0,1 3,12A8,8 0 0,1 11,4C15.26,4 18.73,7.33 19,11.5C19.58,11.19 20.26,11 20.95,11C20.45,5.95 16.18,2 11,2A10,10 0 0,0 1,12A10,10 0 0,0 11,22C13,22 14.88,21.4 16.45,20.38L15,18.92Z" Stretch="Fill" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ButtonBase}}"/>
            <Path x:Key="PathGood" Data="M12,2C6.47,2 2,6.47 2,12C2,17.53 6.47,22 12,22A10,10 0 0,0 22,12C22,6.47 17.5,2 12,2M8.88,7.82L11,9.94L9.94,11L8.88,9.94L7.82,11L6.76,9.94L8.88,7.82M12,17.5C9.67,17.5 7.69,16.04 6.89,14H17.11C16.31,16.04 14.33,17.5 12,17.5M16.18,11L15.12,9.94L14.06,11L13,9.94L15.12,7.82L17.24,9.94L16.18,11Z" Stretch="Fill" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ButtonBase}}"/>
            <Path x:Key="PathNormal" Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M7,9.5C7,8.7 7.7,8 8.5,8C9.3,8 10,8.7 10,9.5C10,10.3 9.3,11 8.5,11C7.7,11 7,10.3 7,9.5M12,17.23C10.25,17.23 8.71,16.5 7.81,15.42L9.23,14C9.68,14.72 10.75,15.23 12,15.23C13.25,15.23 14.32,14.72 14.77,14L16.19,15.42C15.29,16.5 13.75,17.23 12,17.23M15.5,11C14.7,11 14,10.3 14,9.5C14,8.7 14.7,8 15.5,8C16.3,8 17,8.7 17,9.5C17,10.3 16.3,11 15.5,11Z" Stretch="Fill" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ButtonBase}}"/>
            <Path x:Key="PathBad" Data="M20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12M22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2A10,10 0 0,1 22,12M15.5,8C16.3,8 17,8.7 17,9.5C17,10.3 16.3,11 15.5,11C14.7,11 14,10.3 14,9.5C14,8.7 14.7,8 15.5,8M10,9.5C10,10.3 9.3,11 8.5,11C7.7,11 7,10.3 7,9.5C7,8.7 7.7,8 8.5,8C9.3,8 10,8.7 10,9.5M12,14C13.75,14 15.29,14.72 16.19,15.81L14.77,17.23C14.32,16.5 13.25,16 12,16C10.75,16 9.68,16.5 9.23,17.23L7.81,15.81C8.71,14.72 10.25,14 12,14Z" Stretch="Fill" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ButtonBase}}"/>
            <Path x:Key="PathDreadful" Data="M12,2C6.47,2 2,6.47 2,12C2,17.53 6.47,22 12,22A10,10 0 0,0 22,12C22,6.47 17.5,2 12,2M12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20M16.18,7.76L15.12,8.82L14.06,7.76L13,8.82L14.06,9.88L13,10.94L14.06,12L15.12,10.94L16.18,12L17.24,10.94L16.18,9.88L17.24,8.82L16.18,7.76M7.82,12L8.88,10.94L9.94,12L11,10.94L9.94,9.88L11,8.82L9.94,7.76L8.88,8.82L7.82,7.76L6.76,8.82L7.82,9.88L6.76,10.94L7.82,12M12,14C9.67,14 7.69,15.46 6.89,17.5H17.11C16.31,15.46 14.33,14 12,14Z" Stretch="Fill" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ButtonBase}}"/>
        </Grid.Resources>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <Button IsEnabled="{Binding IsReady.Value}"
                        Visibility="{Binding IsPlaying.Value, Converter={StaticResource NegBoolVisibilityConverter}}"
                        Command="{Binding PlayCommand}"
                        Content="{StaticResource PathPlay}" Style="{StaticResource PushButtonStyle}"/>
            <Button IsEnabled="{Binding IsReady.Value}" 
                        Visibility="{Binding IsPlaying.Value, Converter={StaticResource BoolVisibilityConverter}}"
                        Command="{Binding PauseCommand}"
                        Content="{StaticResource PathPause}" Style="{StaticResource PushButtonStyle}"/>
            <Button IsEnabled="{Binding PlayList.HasPrev.Value}" Margin="8,0,0,0"
                        Command="{Binding GoBackCommand}"  
                        Content="{StaticResource PathPrev}" Style="{StaticResource PushButtonStyle}"/>
            <Button IsEnabled="{Binding PlayList.HasNext.Value}"
                        Command="{Binding GoForwardCommand}"  
                        Content="{StaticResource PathNext}" Style="{StaticResource PushButtonStyle}"/>
            <Button IsEnabled="{Binding IsReady.Value}"
                        Command="{Binding FitCommand}"  
                        Content="{StaticResource PathMaximize}" Style="{StaticResource PushButtonStyle}"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal">
            <TextBlock Text="{Binding PlayList.CurrentPos.Value}" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBlock Text=" / " Foreground="White" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding PlayList.TotalCount.Value}" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>

            <ToggleButton 
                IsChecked="{Binding PlayList.Current.Value.Rating, Mode=TwoWay, Converter={StaticResource EnumBooleanConverter},ConverterParameter=DREADFUL}"
                Content="{StaticResource PathDreadful}" Style="{StaticResource ToggleButtonStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip Content="Rating: Dreadful"/>
                </ToolTipService.ToolTip>
            </ToggleButton>

            <ToggleButton 
                IsChecked="{Binding PlayList.Current.Value.Rating, Mode=TwoWay, Converter={StaticResource EnumBooleanConverter},ConverterParameter=BAD}"
                Content="{StaticResource PathBad}" Style="{StaticResource ToggleButtonStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip Content="Rating: Bad"/>
                </ToolTipService.ToolTip>
            </ToggleButton>

            <ToggleButton 
                IsChecked="{Binding PlayList.Current.Value.Rating, Mode=TwoWay, Converter={StaticResource EnumBooleanConverter},ConverterParameter=NORMAL}"
                Content="{StaticResource PathNormal}" Style="{StaticResource ToggleButtonStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip Content="Rating: OK"/>
                </ToolTipService.ToolTip>
            </ToggleButton>

            <ToggleButton 
                IsChecked="{Binding PlayList.Current.Value.Rating, Mode=TwoWay, Converter={StaticResource EnumBooleanConverter},ConverterParameter=GOOD}"
                Content="{StaticResource PathGood}" Style="{StaticResource ToggleButtonStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip Content="Rating: Good"/>
                </ToolTipService.ToolTip>
            </ToggleButton>


            <ToggleButton 
                IsChecked="{Binding PlayList.Current.Value.Rating, Mode=TwoWay, Converter={StaticResource EnumBooleanConverter},ConverterParameter=EXCELLENT}"
                Content="{StaticResource PathExcellent}" Style="{StaticResource ToggleButtonStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip Content="Rating: Excellent"/>
                </ToolTipService.ToolTip>
            </ToggleButton>


            <Button IsEnabled="{Binding IsReady.Value}"
                        Command="{Binding TrashCommand}"  
                        Content="{StaticResource PathTrash}" Style="{StaticResource PushButtonStyle}" Margin="8,0,0,0"/>
        </StackPanel>
        <local:TimelineSlider 
                    Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    x:Name="TimelineSlider" 
                    MinWidth="300"
                    />
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Orientation="Horizontal">
            <TextBlock Text="{Binding PositionText.Value}" Foreground="White"/>
            <TextBlock Text=" / " Foreground="White"/>
            <TextBlock Text="{Binding DurationText.Value}" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>
