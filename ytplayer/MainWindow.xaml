                        IsEditable="True" Text="{Binding SearchText.Value, Mode=TwoWay}" 
                        ItemsSource="{Binding SearchHistory}"
                        MinWidth="150" Margin="0,2" LostFocus="OnSearchBoxLostFocus"
                        >
