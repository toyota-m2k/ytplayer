                        Visibility="{Binding DialogType.Value, Converter={StaticResource EnumVisibilityConverter}, 
                        ConverterParameter=DELETE_COMFIRM}"
                        Margin="10">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Delete Selected Item(s)?"/>
                            <CheckBox Content="Block item(s)." IsChecked="{Binding DeleteItemDialog.BlockItem.Value}" Margin="5,5,0,0"/>
                            <CheckBox Content="Delete video file(s)." IsChecked="{Binding DeleteItemDialog.DeleteVideoFile.Value}" Margin="5,5,0,0"/>
                            <CheckBox Content="Delete audio file(s)." IsChecked="{Binding DeleteItemDialog.DeleteAudioFile.Value}" Margin="5,5,0,0"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="OK" Command="{Binding CommandOk}" Width="100" Margin="0,0,10,0"/>
                                <Button Content="Cancel" Width="100" Command="{Binding CommandCancel}" Margin="0,0,10,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <!-- URL/ホストの受け入れ確認 -->
                    <Grid Visibility="{Binding DialogType.Value, Converter={StaticResource EnumVisibilityConverter}, 
                          ConverterParameter=ACCEPT_DETERMINATION}"
                          Margin="10">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Unknown host ..."/>
                            <Border BorderThickness="1" BorderBrush="LightGray" Margin="0,5">
                                <TextBlock Text="{Binding DeterminationDialog.Host.Value}" Margin="2"/>
                            </Border>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="Accept" Command="{Binding CommandOk}" Width="100" Margin="0,0,10,0"/>
                                <Button Content="Reject" Width="100" Command="{Binding CommandCancel}" Margin="0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <!-- 音声抽出確認 -->
                    <Grid Visibility="{Binding DialogType.Value, Converter={StaticResource EnumVisibilityConverter}, 
                          ConverterParameter=EXTRACT_AUDIO}"
                          Margin="10">
                        <StackPanel Orientation="Vertical">
                            <CheckBox Content="Download Audio File(s)" IsChecked="{Binding ExtractAudoDialog.DownloadAudio.Value}"/>
                            <CheckBox Content="Delete Video File(s)" IsChecked="{Binding ExtractAudoDialog.DeleteVideo.Value}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="OK" Command="{Binding CommandOk}" Width="100" Margin="0,0,10,0"/>
                                <Button Content="Cancel" Width="100" Command="{Binding CommandCancel}" Margin="0,0,10,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <!-- Description -->
                    <Grid Visibility="{Binding DialogType.Value, Converter={StaticResource EnumVisibilityConverter}, 
                          ConverterParameter=EDIT_DESCRIPTION}"
                          Margin="10">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Description"/>
                            <TextBox Text="{Binding DescriptionDialog.Description.Value}" Width="250"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="OK" Command="{Binding CommandOk}" Width="100" Margin="0,0,10,0"/>
                                <Button Content="Cancel" Width="100" Command="{Binding CommandCancel}" Margin="0,0,10,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
