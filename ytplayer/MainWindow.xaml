                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Date, Converter={StaticResource DateStringConverter}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
