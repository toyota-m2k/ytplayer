                    <Grid Visibility="{Binding DialogType.Value, Converter={StaticResource EnumVisibilityConverter}, 
                          ConverterParameter=SYNC_FROM}"
                          Margin="10">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Synchronize from"/>
                            <TextBox Text="{Binding SyncDialog.HostAddress.Value}" Width="250"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="OK" Command="{Binding CommandOk}" Width="100" Margin="0,0,10,0"/>
                                <Button Content="Cancel" Width="100" Command="{Binding CommandCancel}" Margin="0,0,10,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <!-- 終了確認メッセージ -->
                    <Grid Visibility="{Binding DialogType.Value, Converter={StaticResource EnumVisibilityConverter}, 
                          ConverterParameter=CLOSING_MESSAGE}"
                          Margin="10">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Closing now ..."/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
